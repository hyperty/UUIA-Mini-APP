page {
  font-size: 10pt;
  line-height: 150%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.container {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-bottom: 100rpx;
  box-sizing: border-box;
  padding-left: 0;
  padding-right: 0;
  background-color: #f1f1f1;
  margin-top: 20rpx;
}

.card-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-right: 50rpx;
  color: #777;
}

.card-info-money {
  text-align: center;
  font-size: 10pt;
  color: white;
}

.card-info-value {
  font-size: 36pt;
  line-height: 80rpx;
  padding-right: 25rpx;
}

.card-img {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
}

.card-img image {
  width: 125rpx;
  height: 125rpx;
  padding: 20rpx 30rpx;
}

.card-detail {
  display: flex;
  flex-direction: row;
}

.card-detail-name {
  font-size: 11pt;
  padding-left: 30rpx;
  color: black;
}

.card-detail-money {
  font-size: 30rpx;
  color: black;
}

.card-detail-value {
  margin-left: 30rpx;
  font-size: 33rpx;
  line-height: 80rpx;
}

.card-info-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-right: 50rpx;
  color: #777;
}